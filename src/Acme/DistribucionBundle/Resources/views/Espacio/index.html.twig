{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lista de Espacios</h1>

    <table id="example" class="display compact" cellspacing="1" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Area</th>
                <th>Codigo</th>
                <th>Descripcion</th>
                <th>Tipoproducto</th>
                <th>Costosugerido</th>
                <th>Estado</th>
                <th>Costoreal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('espacio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.area }}</td>
                    <td>{{ entity.codigo }}</td>
                    <td>{{ entity.descripcion }}</td>
                    <td>{{ entity.tipoproducto }}</td>
                    <td>{{ entity.costosugerido }}</td>
                    <td>{{ entity.estado }}</td>
                    <td>{{ entity.costoreal }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('espacio_show', { 'id': entity.id }) }}">show</a>
                                <a href="{{ path('espacio_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('espacio_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
