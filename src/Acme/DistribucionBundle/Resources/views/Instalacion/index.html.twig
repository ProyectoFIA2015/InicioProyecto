{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lista de Instalaciones</h1>

    <table id="example" class="display compact" cellspacing="1" width="100%">
        <thead>
        <center>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Ubicacion</th>
                <th>Cantidadsecciones</th>
                <th>Actions</th>
            </tr>
        </center>

    </thead>
    <tbody>
    <center>
        
    </center>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('instalacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.ubicacion }}</td>
                <td>{{ entity.cantidadSecciones }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('instalacion_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('instalacion_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('instalacion_new') }}">
            Crear una instalacion
        </a>
    </li>
</ul>
{% endblock %}
